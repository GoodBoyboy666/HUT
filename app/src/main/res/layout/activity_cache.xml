<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CacheActivity">
    <RelativeLayout
        android:id="@+id/cache_progress_relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="#80000000">

        <ProgressBar
            android:id="@+id/cache_progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/cache_progressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cache_progressBar"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"
            android:text="@string/cache_kb"
            android:textSize="16sp"/>
    </RelativeLayout>
</LinearLayout>